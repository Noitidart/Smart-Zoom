	<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:em="http://www.mozilla.org/2004/em-rdf#">
	  <Description about="urn:mozilla:install-manifest">
		<em:id>Smart-Zoom@jetpack</em:id>
		<em:version>2.0b</em:version>
		<em:type>2</em:type>
		<em:bootstrap>true</em:bootstrap>
		<em:multiprocessCompatible>true</em:multiprocessCompatible>
		<em:optionsType>3</em:optionsType>
		<em:optionsURL>about:smartzoom</em:optionsURL>
		<em:iconURL>chrome://smart-zoom/content/resources/images/icon48.png</em:iconURL>
		<em:icon64URL>chrome://smart-zoom/content/resources/images/icon64.png</em:icon64URL>

		<!-- Firefox -->
		<em:targetApplication>
			<Description>
				<em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
				<em:minVersion>44.0</em:minVersion> <!-- not yet defined -->
				<em:maxVersion>49.0</em:maxVersion> <!-- the latest version i tested it in -->
			</Description>
		</em:targetApplication>

		<!-- Firefox for Android
		<em:targetApplication>
		  <Description>
			<em:id>{aa3c5121-dab2-40e2-81ca-7ea25febc110}</em:id>
			<em:minVersion>44.0</em:minVersion>
			<em:maxVersion>49.0</em:maxVersion>
		  </Description>
		</em:targetApplication>
		-->

		<!-- Front End MetaData -->
		<!-- must provide default non-localized because It's used as a default on AMO. It's used as a default by the add-on manager, with the possibility of other locales overriding it. Failure to provide a non-localized name will lead to failed upload on AMO. -->
		<em:name>Smart Zoom</em:name>
		<em:description>Simulates the smart zoom of mobile devices and tablets on desktop. Instead of double tapping though, click and hold.</em:description>
		<em:creator>Francesco De Stefano</em:creator>
		<em:creator>Noitidart</em:creator>

		<!-- start localizing - For each entry in default data MUST have equivalent in each localized block -->
		<em:localized>
			<Description>
				<em:locale>en-US</em:locale>
				<em:name>Smart Zoom</em:name>
				<em:description>Simulates the smart zoom of mobile devices and tablets on desktop. Instead of double tapping though, click and hold.</em:description>
				<em:creator>Francesco De Stefano</em:creator>
				<em:creator>Noitidart</em:creator>
			</Description>
		</em:localized>
	  </Description>
	</RDF>
